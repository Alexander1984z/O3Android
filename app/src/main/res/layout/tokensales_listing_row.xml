<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="network.o3.o3wallet.MarketPlace.TokenSales.TokenSaleListingRow"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/tokenSaleSquareImageCard"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tokenSaleSquareImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:text="@string/TOKENSALE_Live_Status"
                android:textAppearance="@style/TokenSaleAccentText"
                android:textColor="@color/colorLoss"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tokenSaleDaysLeftTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="28 Days Left"
                android:textAppearance="@style/RegularText.Small.Gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tokenSaleSquareImageCard"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tokenSaleCoinNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="Coin Name"
                android:textAppearance="@style/TableRowTitleText"
                app:layout_constraintStart_toEndOf="@+id/tokenSaleSquareImageCard"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tokenSaleDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="We make digital currencies work for everyone some more really long tesxt to make it look what does it look when three"
                android:textAppearance="@style/RegularText.Small"
                app:layout_constraintBottom_toTopOf="@+id/tokenSaleDaysLeftTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tokenSaleSquareImageCard"
                app:layout_constraintTop_toBottomOf="@+id/tokenSaleCoinNameTextView"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/visitWebsiteButton"
                style="@style/BorderLessButton.Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TOKENSALE_Visit_website"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/tokenSaleDaysLeftTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tokenSaleDaysLeftTextView" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="network.o3.o3wallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".O3Wallet"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".CreateWalletActivity" />
        <activity android:name=".MainTabbedActivity" />
        <activity android:name=".Settings.AddWatchAddress" />
        <activity android:name=".Settings.AddContact"></activity>
        <activity android:name=".Portfolio.AssetGraph" />
        <activity android:name=".SendActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>